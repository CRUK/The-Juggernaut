<% form_for @user_session, :url => session_path do |f| %>
  <%= f.error_messages %>
	<%= raw f.label "Login" %>
  <%= f.text_field :login, :class => "full" %>
	<%= f.label "Password" %>
  <%= f.password_field :password, :class => "full" %>
  <%= f.check_box :remember_me, :class => "remember" %><%= raw f.label(:remember_me, "Remember me", :class => "remember") %>
  <%= f.submit "Login", :class => "submit" %>
<% end %>